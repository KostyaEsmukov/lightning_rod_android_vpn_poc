<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="3mm">

        <TextView style="@style/AppTheme" android:text="@string/address" android:layout_width="wrap_content" android:layout_height="wrap_content" />
        <EditText style="@style/AppTheme" android:id="@+id/address" android:layout_width="wrap_content" android:layout_height="wrap_content" />
        <TextView style="@style/AppTheme" android:text="@string/port" android:layout_width="wrap_content" android:layout_height="wrap_content" />
        <EditText style="@style/AppTheme" android:id="@+id/port" android:layout_width="wrap_content" android:layout_height="wrap_content" />
        <TextView style="@style/AppTheme" android:text="@string/configuration" android:layout_width="wrap_content" android:layout_height="wrap_content" />
        <EditText style="@style/AppTheme" android:id="@+id/configuration" android:layout_width="wrap_content" android:layout_height="wrap_content" />
        <Button style="@style/AppTheme" android:id="@+id/connect" android:text="@string/connect" android:layout_width="wrap_content" android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>
